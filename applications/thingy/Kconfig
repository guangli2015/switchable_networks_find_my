source "Kconfig.zephyr"

menu "Find My Thingy Application Settings"

config SPK_FREQ
	int "Speaker frequency [Hz]"
	default 4000
	help
	  Frequency of every sound generated by the speaker.

config PAIR_RESUME_SOUND_DURATION
	int "Sound duration after pairing resume button press"
	default 100
	help
	  Duration of sound generated after pairing resume button press.

config SN_LOOKUP_SOUND_DURATION
	int "Sound duration after SN lookup button press"
	default 500
	help
	  Duration of sound generated after serial number lookup button press.

config FACTORY_RESET_SOUND_DURATION
	int "Sound duration after factory reset button press"
	default 2000
	help
	  Duration of sound generated after factory reset button press.

config MPU_VDD_PWR_CTRL_INIT_PRIORITY
	int "MPU_VDD power rail init priority"
	default 85
	range 0 SENSOR_INIT_PRIORITY
	help
	  Initialization priority for the MPU_VDD power rail. This powers the MPU9250 motion
	  detector. The value has to be smaller than SENSOR_INIT_PRIORITY.

config MOTION_POLL_THREAD_STACK_SIZE
	int "Stack size for motion detector poll thread"
	default 1024
	depends on BMI270
	help
	  Stack size for a polling thread used by the BMI270 gyroscope.

config MOTION_POLL_THREAD_PRIORITY
	int "Motion detector poll thread priority"
	default 7
	depends on BMI270
	help
	  Priority of a polling thread used by the BMI270 gyroscope.

endmenu
